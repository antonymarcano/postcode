{exec} = require 'child_process'

task 'build', 'Build spec/js from spec/coffee', ->
  command = 'coffee --compile --output spec/js spec/coffee'
  exec command, (err, stdout, stderr) ->
    console.log stdout + stderr

task 'test', 'Builds everything then executes Jasmine tests via phantomjs',  ->
  invoke 'build'
  command = 'phantomjs vendor/phantom-jasmine/lib/run_jasmine_test.coffee spec/TestRunner.html'
  exec command, (err, stdout, stderr) ->
    console.log stdout + stderr

