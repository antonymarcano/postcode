{exec} = require 'child_process'

task 'build', 'Build js from coffee (/*.coffee to js/*.js)', ->
  exec 'coffee --compile --output spec/js spec/coffee', (err, stdout, stderr) ->
    console.log stdout + stderr

task 'test', 'Builds everything then executes Jasmine tests via phantomjs',  ->
  invoke 'build'
  exec 'phantomjs vendor/phantom-jasmine/lib/run_jasmine_test.coffee spec/TestRunner.html', (err, stdout, stderr) ->
    console.log stdout + stderr

